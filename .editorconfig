root = true

[*]

end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.cc, *.cpp, *.hpp]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[CMakeLists.txt]
indent_size = 2
indent_style = space

[Makefile]
indent_style = tab

[*.yml]
indent_size = 2
indent_style = space
